use strict;
use warnings;

use CAD::Format::DWG::AC1003;
use File::Object;
use Test::More 'tests' => 3;
use Test::NoWarnings;

# Data directory.
my $data_dir = File::Object->new->up->dir('data/header/dim_extension_line_second_suppress')->set;

# Test.
my $obj = CAD::Format::DWG::AC1003->from_file(
	$data_dir->file('D1.DWG')->s,
);
is($obj->header->variables->dim_extension_line_second_suppress, 0,
	'Dimension second extension line suppress (0 - off - default).');

# Test.
$obj = CAD::Format::DWG::AC1003->from_file(
	$data_dir->file('D2.DWG')->s,
);
is($obj->header->variables->dim_extension_line_second_suppress, 1,
	'Dimension second extension line suppress (1 - on).');
